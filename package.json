{
  "name": "k0tet-website",
  "version": "3.0.0",
  "description": "Source for the K0TET website",
  "watch": {
    "build": {
      "patterns": [
        "src/**/*",
        "template.html"
      ],
      "extensions": "*"
    }
  },
  "scripts": {
    "dev": "concurrently -n \"WATCH,HTTP\" \"npm run watch\" \"npm run http\"",
    "http": "http-server dist -a localhost -o",
    "watch": "npm-watch",
    "build": "node build.js",
    "deploy": "node build.js && gh-pages -d dist -b master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k0tet/k0tet-website.git"
  },
  "author": "Claus Niesen",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/k0tet/k0tet-website/issues"
  },
  "homepage": "https://k0tet.github.io/",
  "devDependencies": {
    "concurrently": "^3.5.1",
    "fs-extra": "^6.0.1",
    "gh-pages": "^1.1.0",
    "http-server": "^0.11.1",
    "klaw": "^2.1.1",
    "npm-watch": "^0.3.0"
  }
}
